<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
tools:context=".ui.activitys.mine.PersonalActivity"
    >
    <!--tools:context="administrator.example.com.baobao.ui.user.PersonalActivity"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px">


        <ImageView
            android:id="@+id/personal_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="60px"
            android:src="@mipmap/xiaoyu3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/personal_personal"
            android:textSize="70px" />
        <!--android:textStyle="bold"-->



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#E3E3E3"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/personal_avatar"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="@string/personal_modify"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp" />





            <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/personal_avatar1"-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="150dp"-->
                <!--android:src="@mipmap/ic_launcher"-->
                <!--android:layout_centerHorizontal="true"-->

                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_toStartOf="@+id/imageView3"-->
                <!--android:layout_marginEnd="10px"-->
                <!--/>-->





            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:src="@mipmap/wode_zhankaiyou3"
                android:id="@+id/imageView3"
                android:layout_alignTop="@+id/textView7"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#E3E3E3"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"/>

        <RelativeLayout
            android:id="@+id/set_address1"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="@string/personal_phone" />


            <TextView
                android:id="@+id/personal_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18272713183"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toStartOf="@+id/imageView4"
                android:layout_marginEnd="50px" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/text2"
                android:layout_marginEnd="36dp"
                android:src="@mipmap/wode_zhankaiyou3"
                android:id="@+id/imageView4" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#E3E3E3"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"/>

        <RelativeLayout
            android:id="@+id/set_updated1"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="@string/personal_name" />


            <TextView
                android:id="@+id/personal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天荒地老"
                android:layout_alignTop="@+id/imageView5"
                android:layout_toStartOf="@+id/imageView5"
                android:layout_marginEnd="50px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/text3"
                android:layout_marginEnd="36dp"
                android:src="@mipmap/wode_zhankaiyou3"
                android:id="@+id/imageView5" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#E3E3E3"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"/>

        <RelativeLayout
            android:id="@+id/set_clear1"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="@string/signature" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/text4"
                android:layout_marginEnd="36dp"
                android:src="@mipmap/wode_zhankaiyou3" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="#E3E3E3"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"/>

    </LinearLayout>

</LinearLayout>
