<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px">


        <ImageView
            android:id="@+id/Details_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="32px"
            android:src="@mipmap/xiaoyu3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="详情"
            android:textSize="70px" />
        <!--android:textStyle="bold"-->


        <ImageView
            android:id="@+id/Details_shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="32px"
            android:src="@mipmap/fenxiang02" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="#F1F1F1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--轮播-->
            <com.youth.banner.Banner
                android:id="@+id/Details_banner"
                android:layout_width="match_parent"
                android:layout_height="952px" />

<View
    android:layout_width="match_parent"
    android:layout_height="4px"
    android:background="#F1F1F1"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="130px" />

            <com.zhouwei.mzbanner.CustomViewPager

                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="2800px">
                <!--android:layout_height="@dimen/y1920"-->
            </com.zhouwei.mzbanner.CustomViewPager>
            <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/pager"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/details_button_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FC655E"
            android:text="放入收藏"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/details_button_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFF"
            android:text="马上租下"
            android:textColor="#FD837D" />

        <Button
            android:id="@+id/details_button_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFF"
            android:text="立刻买断"
            android:textColor="#FD837D" />
    </LinearLayout>

    <TextView
        android:id="@+id/details__user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>