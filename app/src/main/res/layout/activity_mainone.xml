<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fm_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@mipmap/bg">

        <RadioButton
            android:id="@+id/home_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_bt"
            android:gravity="center"
            android:text="首页"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/live_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_xuan"
            android:gravity="center"
            android:text="选包"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/video_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_bt3"
            android:gravity="center"
            android:text="上传"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/eye_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_bt4"
            android:gravity="center"
            android:text="收藏"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/china_radiobt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="6px"
            android:drawableTop="@drawable/china_nav_bt5"
            android:gravity="center"
            android:text="我的"
            android:textSize="24px" />

    </RadioGroup>

</LinearLayout>