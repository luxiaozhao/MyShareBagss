<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.share.bag.ui.share.ShareActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px">

        <ImageView
            android:id="@+id/Share_return"
            android:layout_width="32px"
            android:layout_height="51px"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="32px"
            android:src="@mipmap/xiaoyuhei" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="分享一位小主"
            android:textSize="52px"
            android:textColor="#424242"/>


    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1112px"
                android:background="#FD6861">


                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90px"
                    android:text="邀请好友注册《一位小主》，赢取现金"
                    android:textColor="#FFF"
                    android:textSize="40px" />


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="434px"
                    android:layout_height="432px"
                    android:layout_below="@+id/textView18"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80px"
                    android:scaleType="fitXY"
                    android:src="@drawable/erweima3" />


                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="88px"
                    android:text="我的邀请码"
                    android:textColor="#FFF"
                    android:textSize="46px"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/share_invite"
                    android:layout_width="432px"
                    android:layout_height="115px"
                    android:layout_below="@+id/textView19"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="44px"
                    android:background="#EA4A42"
                    android:gravity="center"
                    android:text="3567220"
                    android:textColor="#FFF"
                    android:textSize="75px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView19"
                    android:layout_below="@+id/share_invite"
                    android:layout_marginTop="34px"
                    android:text="(长按可复制)"
                    android:textColor="#FFF"
                    android:textSize="34px" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="#EDEDED"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="951px"
                android:background="#FFF"
                android:orientation="vertical">


                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60px"
                    android:text="邀请好友"
                    android:textSize="40px" />



                <LinearLayout
                    android:layout_marginTop="56px"
                    android:layout_marginLeft="62.5px"
                    android:layout_marginRight="62.5px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:id="@+id/share_wxfriends1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="140px"
                            android:layout_height="140px"
                            android:src="@drawable/weixinhaoyou3" />

                        <TextView
                            android:layout_marginTop="30px"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="微信好友"
                            android:textSize="37px"/>


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/share_wxcircle1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView

                        android:layout_weight="1"
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:src="@drawable/weixinpengyouquan3" />


                        <TextView
                            android:layout_marginTop="30px"

                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="微信朋友圈"
                            android:textSize="37px"/>



                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/share_qqcircle1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:src="@drawable/qqhaoyou3" />
                        <TextView
                            android:layout_marginTop="30px"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="QQ好友"
                            android:textSize="37px"/>


</LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="58px"
                    android:layout_marginLeft="218px"
                    android:layout_marginRight="218px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <LinearLayout
                        android:id="@+id/share_xlsina1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:src="@drawable/weibo3" />
                        <TextView
                            android:layout_marginTop="30px"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新浪微博"
                            android:textSize="37px"/>

</LinearLayout>



                    <LinearLayout
                        android:id="@+id/share_qqfriends"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:src="@drawable/qqkongjian3" />

                        <TextView
                            android:layout_marginTop="30px"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QQ空间"
                            android:textSize="37px"/>
</LinearLayout>


                </LinearLayout>

<View
    android:layout_marginTop="82px"
    android:layout_marginLeft="49px"
    android:layout_marginRight="40px"
    android:layout_width="match_parent"
    android:layout_height="6px"
    android:background="#EDEDED"/>

<LinearLayout
    android:layout_marginTop="42px"
    android:layout_marginLeft="64px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1、成功邀请一位好友奖励1-10元现金；"
        android:textSize="38px"
        android:textColor="#8f8f8f"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2、每天最多可邀请50人，每月最多净赚15000元。"
        android:textSize="38px"
        android:textColor="#8f8f8f"/>

</LinearLayout>






            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
