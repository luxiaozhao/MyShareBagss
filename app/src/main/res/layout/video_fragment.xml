<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="200px">
        <!--circleimageview-->
        <!--android:id="@+id/home_return"-->
        <ImageView
           android:id="@+id/return_fragment"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp" />

    </RelativeLayout>


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginStart="44dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentStart="true"
           android:layout_marginBottom="75dp"
           android:id="@+id/upload_layout1">

           <ImageView
               android:id="@+id/upload_upload"
               android:layout_width="300px"
               android:layout_height="300px"
               android:src="@mipmap/ic_launcher"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="上传包包"/>

       </LinearLayout>




       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginEnd="49dp"
           android:id="@+id/upload_layout2"
           android:layout_alignTop="@+id/upload_layout1"
           android:layout_alignParentEnd="true">

           <ImageView
               android:id="@+id/upload_talent"
               android:layout_width="300px"
               android:layout_height="300px"
               android:src="@mipmap/ic_launcher"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="包包达人"/>

       </LinearLayout>




   </RelativeLayout>

</LinearLayout>