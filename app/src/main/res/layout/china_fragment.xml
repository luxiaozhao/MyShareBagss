<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="420px"
                android:background="@drawable/wode_beijing3">

                <ImageView
                    android:id="@+id/mine_avatar"
                    android:layout_width="156px"
                    android:layout_height="156px"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="84px"
                    android:src="@drawable/touxiang3" />

                <TextView
                    android:id="@+id/mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_marginBottom="8dp"
                    android:text="我爱包包"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/mine_avatar"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/mine_avatar"
                    android:text="青铜会员"
                    android:textColor="#FFF"
                    android:textSize="26px" />

                <LinearLayout
                    android:id="@+id/mine_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/mine_avatar"
                    android:layout_alignParentEnd="true"
                    android:background="@mipmap/wodezhuye1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="196px"
                        android:text="我的主页"
                        android:textSize="26px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/wodezhuye2" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/mine_cabinets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="23dp"
                        android:src="@mipmap/wode_guizi3" />

                    <TextView
                        android:id="@+id/home_leisurerent0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="我的包柜" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView2"
                        android:layout_alignStart="@+id/home_leisurerent0"
                        android:text="使用记录"
                        android:textSize="30px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100px"
                        android:layout_toEndOf="@+id/textView"
                        android:src="@mipmap/dayu3" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="80px"
                    android:layout_marginTop="80px"
                    android:background="#D9D9D9"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_shared"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="23dp"
                        android:src="@mipmap/wode_gongxiang2" />

                    <TextView
                        android:id="@+id/home_leisurename1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView1"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/imageView1"
                        android:text="正在共享" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView1"
                        android:layout_alignStart="@+id/home_leisurename1"
                        android:text="状态查询"
                        android:textSize="30px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="100px"
                        android:layout_toEndOf="@+id/textView4"
                        android:src="@mipmap/dayu3" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="196px">

                <LinearLayout
                    android:id="@+id/mine_Pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wode_daifu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="代付款"
                        android:textSize="40px"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_Sign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wode_daiqian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="待签收"
                        android:textSize="40px"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_ship"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wode_daifa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="代发货"
                        android:textSize="40px"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_return"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wode_daigui3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0px"
                        android:text="待归还"
                        android:textSize="40px"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#F2F2F2"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mine_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="50px"
                        android:text="我的钱包" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textView7"
                        android:layout_marginEnd="36dp"
                        android:src="@mipmap/wode_zhankaiyou3" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:background="#F2F2F2"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_invite"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="50px"
                        android:text="邀请好友" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/text2"
                        android:layout_marginEnd="36dp"
                        android:src="@mipmap/wode_zhankaiyou3" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:background="#F2F2F2"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_address"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="50px"
                        android:text="我的地址" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/text3"
                        android:layout_marginEnd="36dp"
                        android:src="@mipmap/wode_zhankaiyou3" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:background="#F2F2F2"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_contact"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="50px"
                        android:text="联系客服" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/text4"
                        android:layout_marginEnd="36dp"
                        android:src="@mipmap/wode_zhankaiyou3" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:background="#F2F2F2"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_problem"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="50px"
                        android:text="常见问题" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/text5"
                        android:layout_marginEnd="36dp"
                        android:src="@mipmap/wode_zhankaiyou3" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:background="#F2F2F2"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_Complaints"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="50px"
                        android:text="投诉建议" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/text6"
                        android:layout_marginEnd="36dp"
                        android:src="@mipmap/wode_zhankaiyou3" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:background="#F2F2F2"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_cooperation"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="50px"
                        android:text="商务合作" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/text7"
                        android:layout_marginEnd="36dp"
                        android:src="@mipmap/wode_zhankaiyou3" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:background="#F2F2F2"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_set"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="50px"
                        android:text="设置" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/text8"
                        android:layout_marginEnd="36dp"
                        android:src="@mipmap/wode_zhankaiyou3" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>