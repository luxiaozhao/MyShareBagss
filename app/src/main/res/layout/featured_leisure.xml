<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="644px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="644px">


        <RelativeLayout
            android:id="@+id/home_leisure_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="18px">

            <ImageView
                android:id="@+id/home_leisureimg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/mo1" />


            <TextView
                android:id="@+id/home_leisurename1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/home_leisurerent1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:text="Ferragamo"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_leisurerent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/home_leisurename1"
                android:layout_marginBottom="10px"
                android:text="¥20/3天"
                android:textColor="#FFF"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/home_leisureoriginal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/home_leisurerent1"
                android:layout_alignBottom="@+id/home_leisurename1"
                android:layout_marginStart="20px"
                android:layout_toEndOf="@+id/home_leisurerent1"
                android:text="原价2000"
                android:textColor="#FFF"
                android:textSize="12sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="18px">

            <RelativeLayout
                android:id="@+id/home_leisure_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="9px">

                <ImageView
                    android:id="@+id/home_leisureimg2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/mo1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/home_leisurename2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ferragamo"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:layout_above="@+id/home_leisurerent2"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/home_leisurerent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥20/3天"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:id="@+id/home_leisureoriginal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原价2000"
                    android:textColor="#FFF"
                    android:textSize="10sp"
                    android:layout_below="@+id/home_leisurename2"
                    android:layout_toEndOf="@+id/home_leisurerent2" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/home_leisure_img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="9px">

                <ImageView
                    android:id="@+id/home_leisureimg3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/mo2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:id="@+id/home_leisurename3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ferragamo"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:layout_above="@+id/home_leisurerent3"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/home_leisurerent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/home_leisurename3"
                    android:layout_marginBottom="10px"
                    android:text="¥20/3天"
                    android:textColor="#FFF"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/home_leisureoriginal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_leisurename3"
                    android:layout_toEndOf="@+id/home_leisurerent3"
                    android:text="原价2000"
                    android:textColor="#FFF"
                    android:textSize="10sp" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>